<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:brushes="using:UICompositionAnimations.Brushes">

    <!--Default fade out accent brush (button normal state)-->
    <SolidColorBrush x:Key="AccentBrushLowFade"/>
    
    <!--Highlight accent brush (button highlight state)-->
    <SolidColorBrush x:Key="AccentBrushMediumFade"/>
    
    <!--Sub MenuFlyout brushes-->
    <SolidColorBrush x:Key="SubMenuFlyoutPointerOverBrush"/>
    <SolidColorBrush x:Key="SubMenuFlyoutOpenedBrush"/>
    
    <!--Red danger brush-->
    <SolidColorBrush x:Key="RedDangerBrush" Color="#FFDC232B"/>
    
    <!--Breakpoints-->
    <SolidColorBrush x:Key="BreakpointFillBrush" Color="#FFE51400"/>
    <SolidColorBrush x:Key="BreakpointBorderBrush" Color="#FFF4DFDD"/>
    <SolidColorBrush x:Key="BreakpointLineBrush" Color="#FF762C2C"/>
    
    <!--Misc-->
    <SolidColorBrush x:Key="ShellSeparatorLineFillBrush" Color="#FF6E6E6E"/>
    
    <!--Lights-->
    <SolidColorBrush x:Key="BorderLightBrush"/>
    <SolidColorBrush x:Key="ElementsWideLightBrush"/>
    <SolidColorBrush x:Key="WideLightBrushDarkShadeBackground"/>
    
    <!--Virtual keyboard brush-->
    <brushes:CustomAcrylicBrush
        x:Key="KeyboardBrush"
        Mode="HostBackdrop"
        FallbackColor="#FF121212"
        UnsupportedEffectFallbackColor="#FF121212"
        Tint="#FF101010"
        TintMix="0.9"
        NoiseTextureUri="/Assets/Misc/noise.png"/>
    
    <!--CommandBar/ContextMenu brush-->
    <brushes:CustomAcrylicBrush
        x:Key="InAppGrayAcrylicBrush"
        Mode="InAppBlur"
        BlurAmount="8"
        Tint="#FF222222"
        TintMix="0.6"
        NoiseTextureUri="/Assets/Misc/noise.png"/>

    <!--CommandBar content brush-->
    <brushes:CustomAcrylicBrush
        x:Key="HostBackdropGrayAcrylicBrush"
        Mode="HostBackdrop"
        Tint="#FF181818"
        TintMix="0.9"
        NoiseTextureUri="/Assets/Misc/noise.png"/>

    <!--ComboBox brush-->
    <brushes:CustomAcrylicBrush
        x:Key="ComboBoxAcrylicBrush"
        Mode="InAppBlur"
        BlurAmount="8"
        Tint="#FF161616"
        TintMix="0.6"
        NoiseTextureUri="/Assets/Misc/noise.png"/>

    <!--Header host backdrop blur brush-->
    <brushes:CustomAcrylicBrush
        x:Key="HeaderHostBackdropBlurBrush"
        Mode="HostBackdrop"
        Tint="#FF1E1E1E"
        TintMix="0.8"
        NoiseTextureUri="/Assets/Misc/noise.png"/>

    <!--Header in-app acrylic brush-->
    <brushes:CustomAcrylicBrush
        x:Key="HeaderInAppAcrylicBrush"
        Mode="InAppBlur"
        BlurAmount="8"
        Tint="#FF1E1E1E"
        TintMix="0.6"
        NoiseTextureUri="/Assets/Misc/noise.png"/>
    
    <!--Popup brush-->
    <brushes:CustomAcrylicBrush
        x:Key="PopupInAppAcrylicBrush"
        Mode="InAppBlur"
        BlurAmount="8"
        Tint="#FF1B1B1B"
        TintMix="0.8"
        NoiseTextureUri="/Assets/Misc/noise.png"/>
    
    <!--Notification brushes-->
    <brushes:CustomAcrylicBrush
        x:Key="NotificationAcrylicBrush"
        Mode="InAppBlur"
        BlurAmount="8"
        Tint="{StaticResource SystemAccentColor}"
        TintMix="0.5"
        NoiseTextureUri="/Assets/Misc/noise.png"/>
    <brushes:CustomAcrylicBrush
        x:Key="NotificationErrorAcrylicBrush"
        Mode="InAppBlur"
        BlurAmount="8"
        Tint="#FFFFAA00"
        TintMix="0.5"
        NoiseTextureUri="/Assets/Misc/noise.png"/>
</ResourceDictionary>
