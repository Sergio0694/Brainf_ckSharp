<UserControl
    x:Class="Brainf_ck_sharp_UWP.UserControls.Flyouts.Settings.Sections.InterpreterSettingsSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        
        <!--Blur mode-->
        <TextBlock
            x:Uid="ClearStdinBuffer"
            Text="Clear Stdin buffer on execution"/>
        <ToggleSwitch
            IsOn="{Binding ViewModel.ClearStdinBufferOnExecution, Mode=TwoWay}"/>

        <TextBlock
            Margin="0,8,0,0"
            x:Uid="AutorunCodeInBackground"
            Text="Autorun code in the background"/>
        <ToggleSwitch
            IsOn="{Binding ViewModel.AutorunCodeInBackground, Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
