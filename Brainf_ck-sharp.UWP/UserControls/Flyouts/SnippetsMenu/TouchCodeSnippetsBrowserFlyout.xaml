<UserControl
    x:Class="Brainf_ck_sharp_UWP.UserControls.Flyouts.SnippetsMenu.TouchCodeSnippetsBrowserFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:snippetsMenu="using:Brainf_ck_sharp_UWP.UserControls.DataTemplates.SnippetsMenu"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="{StaticResource ComboBoxAcrylicBrush}"
          BorderThickness="1"
          BorderBrush="{StaticResource CustomContextMenuBorderBrush}">
        <ListView
            ItemsSource="{x:Bind ViewModel.CodeSnippets, Mode=OneWay}"
            ItemContainerStyle="{StaticResource ListViewItemWithoutBackgroundVisualStates}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsItemClickEnabled="True"
            ItemClick="ListViewBase_OnItemClick"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollMode="Disabled"
            ScrollViewer.IsVerticalRailEnabled="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <snippetsMenu:CodeSnippetTemplate Code="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
